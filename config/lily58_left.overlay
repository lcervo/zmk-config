/*
 * Lily58 Sharp Memory LCD Override
 * Explicit SPI pin configuration
 */

/ {
    chosen {
        zephyr,display = &sharp_display;
    };
};

// Disable default I2C OLED
&pro_micro_i2c {
    status = "disabled";
};

// Override SPI configuration completely
&pro_micro_spi {
    status = "okay";
    compatible = "nordic,nrf-spim";
    
    // Explicitly set SPI pins based on your wiring:
    sck-pin = <20>;   // P0.20 (D3) = SCLK
    mosi-pin = <17>;  // P0.17 (D2) = MOSI
    miso-pin = <17>;  // Not used but required
    cs-gpios = <&gpio0 22 GPIO_ACTIVE_HIGH>; // P0.22 (D4) = CS
    
    sharp_display: ls027b7dh01@0 {
        compatible = "sharp,ls0xx";
        reg = <0>;
        spi-max-frequency = <1000000>;
        width = <160>;
        height = <68>;
    };
};